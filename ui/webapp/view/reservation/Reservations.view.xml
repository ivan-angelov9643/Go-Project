<mvc:View
		id="reservationsView"
		controllerName="library-app.controller.reservation.Reservations"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<l:BlockLayout
				id="BlockLayoutReservations"
				background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						backgroundColorSet="ColorSet9"
						backgroundColorShade="ShadeA"
						width="3">
					<Toolbar design="Transparent">
						<Title
								text="Reservations"
								level="H3"
								width="102px"/>
						<Text text="Search by username:" width="160px"/>
						<Text text="Search by book title:" width="160px"/>
						<Text text="Sort by:" width="160px"/>
						<Text text="Order:" width="160px"/>
					</Toolbar>
					<Toolbar design="Transparent">
						<Button
								tooltip="Refresh"
								icon="sap-icon://refresh"
								press="loadData"/>
						<ToolbarSpacer width="40px"/>
						<Input
								id="usernameSearch"
								placeholder="Enter username"
								liveChange="onUsernameSearchChange"
								width="160px"
								class="sapUiMediumMarginBegin"/>
						<Input
								id="titleSearch"
								placeholder="Enter title"
								liveChange="onTitleSearchChange"
								width="160px"/>
						<Select
								id="sortBySelect"
								change="onSortByChange"
								width="160px">
							<items>
								<core:Item key="created_at" text="Creation Date" />
								<core:Item key="expiry_date" text="Expiry Date" />
							</items>
						</Select>
						<Select
								id="sortOrderSelect"
								change="onSortOrderChange"
								width="160px">
							<items>
								<core:Item key="asc" text="Ascending" />
								<core:Item key="desc" text="Descending" />
							</items>
						</Select>
					</Toolbar>
					<Table
							id="reservationsTable"
							items="{path:'reservation>/reservations', templateShareable: false}"
							fixedLayout="false">
						<columns>
							<Column>
								<Text text="User"/>
							</Column>
							<Column>
								<Text text="Book"/>
							</Column>
							<Column>
								<Text text="Creation Date"/>
							</Column>
							<Column>
								<Text text="Expiry Date"/>
							</Column>
							<Column hAlign="Center">
								<Text text="Actions"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{reservation>user_name}"/>
									<Text text="{reservation>book_title}"/>
									<Text text="{path: 'reservation>created_at', formatter:'.formatter.formatDateTime'}"/>
									<Text text="{path: 'reservation>expiry_date', formatter:'.formatter.formatDateTime'}"/>
									<HBox justifyContent="Center">
										<Button
												text="Extend reservation"
												icon="sap-icon://action"
												press="onExtendReservation"
												class="sapUiTinyMarginEnd"
												visible="{= ${userRoles>/reservation.edit} ? true: false }" />
										<Button
											text="Make loan"
											icon="sap-icon://add-document"
											press="onMakeLoan"
											class="sapUiTinyMarginEnd"
											visible="{= ${userRoles>/reservation.edit} ? true : false }" />
										<Button
												text="Delete"
												icon="sap-icon://delete"
												press="onDeleteReservation"
												visible="{= ${userRoles>/reservation.delete} ? true : false }" />
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>
