<mvc:View
		controllerName="library-app.controller.reservation.Reservations"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<l:BlockLayout
				id="BlockLayoutReservations"
				background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						backgroundColorSet="ColorSet9"
						backgroundColorShade="ShadeA"
						width="3">
					<Table
							items="{path:'reservation>/reservations', templateShareable: false}"
							fixedLayout="false">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title
										text="Reservations"
										level="H3"/>
								<Button
										tooltip="Refresh"
										icon="sap-icon://refresh"
										press="loadData"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="User"/>
							</Column>
							<Column>
								<Text text="Book"/>
							</Column>
							<Column>
								<Text text="Creation"/>
							</Column>
							<Column>
								<Text text="Expiry"/>
							</Column>
							<Column hAlign="Center">
								<Text text="Actions"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{reservation>user_name}"/>
									<Text text="{reservation>book_title}"/>
									<Text text="{path: 'reservation>created_at', formatter:'.formatter.formatDateTime'}"/>
									<Text text="{path: 'reservation>expiry_date', formatter:'.formatter.formatDateTime'}"/>
									<HBox justifyContent="Center">
										<Button
												text="Extend reservation"
												icon="sap-icon://action"
												press="onExtendReservation"
												class="sapUiTinyMarginEnd"/>
										<Button
												text="Delete"
												icon="sap-icon://delete"
												press="onDeleteReservation"/>
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>
