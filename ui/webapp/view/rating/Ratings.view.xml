<mvc:View
		controllerName="library-app.controller.rating.Ratings"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<l:BlockLayout
				id="BlockLayoutRatings"
				background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						backgroundColorSet="ColorSet9"
						backgroundColorShade="ShadeA"
						width="3">
					<Table
							items="{path:'rating>/ratings', templateShareable: false}"
							fixedLayout="false">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title
										text="Ratings"
										level="H3"/>
								<Button
										tooltip="Refresh"
										icon="sap-icon://refresh"
										press="loadData"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column>
								<Text text="User"/>
							</Column>
							<Column>
								<Text text="Book"/>
							</Column>
							<Column>
								<Text text="Content"/>
							</Column>
							<Column>
								<Text text="Value"/>
							</Column>
							<Column hAlign="Center">
								<Text text="Actions"
									  visible="{= ${userRoles>/rating.delete} ? true: false }"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{rating>user_name}"/>
									<Text text="{rating>book_title}"/>
									<Text text="{rating>content}"/>
									<Text text="{rating>value}"/>
									<HBox justifyContent="Center">
										<Button
												text="Delete"
												icon="sap-icon://delete"
												press="onDeleteRating"
												visible="{= ${userRoles>/rating.delete} ? true: false }"/>
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>
