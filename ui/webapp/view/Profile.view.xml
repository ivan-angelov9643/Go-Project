<mvc:View
		controllerName="library-app.controller.Profile"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<Page showHeader="false">
		<l:BlockLayout id="BlockLayoutProfile" background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell>
					<VBox class="sapUiMediumMargin">
						<form:Form>
							<form:layout>
								<form:ResponsiveGridLayout
										labelSpanXL="3"
										labelSpanL="4"
										labelSpanM="6"
										labelSpanS="12"
										adjustLabelSpan="false"
										singleContainerFullSize="true" />
							</form:layout>
							<form:title>
								<core:Title text="Profile Details" />
							</form:title>
							<form:formContainers>
								<form:FormContainer>
									<form:formElements>
										<form:FormElement label="Username">
											<form:fields>
												<Text text="{user>/preferred_username}" class="sapUiResponsiveMargin sapUiMediumFontSize" />
											</form:fields>
										</form:FormElement>
										<form:FormElement label="Given Name">
											<form:fields>
												<Text text="{user>/given_name}" class="sapUiResponsiveMargin sapUiMediumFontSize" />
											</form:fields>
										</form:FormElement>
										<form:FormElement label="Family Name">
											<form:fields>
												<Text text="{user>/family_name}" class="sapUiResponsiveMargin sapUiMediumFontSize" />
											</form:fields>
										</form:FormElement>
										<form:FormElement label="Email">
											<form:fields>
												<Text text="{user>/email}" class="sapUiResponsiveMargin sapUiMediumFontSize" />
											</form:fields>
										</form:FormElement>
									</form:formElements>
								</form:FormContainer>
							</form:formContainers>
						</form:Form>
					</VBox>
					<HBox justifyContent="End" class="sapUiSmallMarginTop">
						<Button text="Edit" press="onEditProfile" type="Emphasized" />
					</HBox>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>
