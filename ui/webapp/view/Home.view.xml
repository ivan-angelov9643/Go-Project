<mvc:View
	controllerName="library-app.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://home"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>homeTitle}"
							level="H3"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>homeContent}"
							class="sapUiTinyMarginBottom"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>