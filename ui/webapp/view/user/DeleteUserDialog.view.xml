<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="library-app.controller.user.DeleteUserDialog">
    <Dialog
            id="deleteUserDialog"
            title="Delete User"
            type="Message"
            afterClose=".onDialogClose">
        <content>
            <VBox class="sapUiSmallMargin">
                <Text
                        text="Are you sure you want to delete {dialogUser>/preferred_username}?"
                        wrapping="true" />
            </VBox>
        </content>
        <buttons>
            <Button
                    id="yesButton"
                    text="Yes"
                    type="Accept"
                    press=".onConfirmDelete" />
            <Button
                    id="noButton"
                    text="No"
                    type="Reject"
                    press=".onCancelDelete" />
        </buttons>
    </Dialog>
</mvc:View>
