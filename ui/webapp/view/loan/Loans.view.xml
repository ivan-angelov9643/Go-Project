<mvc:View
		controllerName="library-app.controller.loan.Loans"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<l:BlockLayout
				id="BlockLayoutLoans"
				background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						backgroundColorSet="ColorSet9"
						backgroundColorShade="ShadeA"
						width="3">
					<Toolbar design="Transparent">
						<Title
								text="Loans"
								width="55px"
						/>
						<Text text="Search by username:" width="160px"/>
						<Text text="Search by book title:" width="160px"/>
						<Text text="Filter by status:" width="160px"/>
						<Text text="Sort by:" width="160px"/>
						<Text text="Order:" width="160px"/>

					</Toolbar>
					<Toolbar design="Transparent">
						<Button
								tooltip="Refresh"
								icon="sap-icon://refresh"
								press="loadData"
								class="sapUiSmallMarginEnd"/>
						<Input
								id="usernameSearch"
								placeholder="Enter username"
								liveChange="onUsernameSearchChange"
								width="160px"/>
						<Input
								id="titleSearch"
								placeholder="Enter title"
								liveChange="onTitleSearchChange"
								width="160px"/>
						<Select
								id="statusFilter"
								change="onFilterStatusChange"
								width="160px">
							<items>
								<core:Item key="all" text="All" />
								<core:Item key="completed" text="Completed" />
								<core:Item key="active" text="Active" />
							</items>
						</Select>
						<Select
								id="sortBySelect"
								change="onSortByChange"
								width="160px">
							<items>
								<core:Item key="start_date" text="Start Date" />
								<core:Item key="due_date" text="Due Date" />
								<core:Item key="return_date" text="Return Date" />
							</items>
						</Select>
						<Select
								id="sortOrderSelect"
								change="onSortOrderChange"
								width="160px">
							<items>
								<core:Item key="asc" text="Ascending" />
								<core:Item key="desc" text="Descending" />
							</items>
						</Select>
					</Toolbar>
					<Table
							id="loansTable"
							items="{path:'loan>/data', templateShareable: false}"
							fixedLayout="false">
						<columns>
							<Column>
								<Text text="User"/>
							</Column>
							<Column>
								<Text text="Book"/>
							</Column>
							<Column>
								<Text text="Start Date"/>
							</Column>
							<Column>
								<Text text="Due Date"/>
							</Column>
							<Column>
								<Text text="Return Date"/>
							</Column>
							<Column>
								<Text text="Status"/>
							</Column>
							<Column hAlign="Center">
								<Text text="Actions"
									  visible="{= ${userRoles>/loan.edit} ||
												 ${userRoles>/loan.delete}? true: false }"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{loan>user_name}"/>
									<Text text="{loan>book_title}"/>
									<Text text="{path: 'loan>start_date', formatter:'.formatter.formatDate'}"/>
									<Text text="{path: 'loan>due_date', formatter:'.formatter.formatDate'}"/>
									<Text text="{path: 'loan>return_date', formatter:'.formatter.formatOptionalDate'}"/>
									<Text text="{loan>status}"/>
									<HBox justifyContent="Center">
										<Button
												text="Extend loan"
												icon="sap-icon://action"
												press="onExtendLoan"
												class="sapUiTinyMarginEnd"
												enabled="{= ${loan>status} === 'active' }"
												visible="{= ${userRoles>/loan.edit} ? true: false }" />
										<Button
												text="Return book"
												icon="sap-icon://undo"
												press="onReturnBook"
												class="sapUiTinyMarginEnd"
												enabled="{= ${loan>status} === 'active' }"
												visible="{= ${userRoles>/loan.edit} ? true: false }" />
										<Button
												text="Delete"
												icon="sap-icon://delete"
												press="onDeleteLoan"
												visible="{= ${userRoles>/loan.delete} ? true: false }" />
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Toolbar design="Transparent">
						<Button
								text="Previous"
								icon="sap-icon://slim-arrow-left"
								press="onPreviousPage"
								enabled="{= ${loan>/page} > 1 }"/>
						<Text
								text="{= 'Page ' + ${loan>/page} + ' of ' + ${loan>/total_pages} }"
								class="sapUiSmallMargin"/>
						<Button
								text="Next"
								icon="sap-icon://slim-arrow-right"
								press="onNextPage"
								enabled="{= ${loan>/page} &lt; ${loan>/total_pages} }"/>
					</Toolbar>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>
